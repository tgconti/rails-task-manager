<div class="d-flex">
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
    <hr>
    <%= f.submit class: 'btn btn-outline-primary' %>
  <% end %>
</div>
